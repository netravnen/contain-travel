{
    "manifest_version": 2,
    "name": "Git Container",
    "version": "1.0.2",

    "description": "Git Container isolates your Git hosting service activity from the rest of your web activity in order to prevent these services from tracking you via third party cookies.",

    "icons": {
        "48": "icon.png",
        "96": "icon@2x.png"
    },

    "applications": {
      "gecko": {
        "id": "@contain-git",
        "strict_min_version": "57.0"
      }
    },

    "homepage_url": "https://github.com/SleepingPanda/contain-git",

    "permissions": [
        "<all_urls>",
        "contextualIdentities",
        "cookies",
        "management",
        "tabs",
        "webRequestBlocking",
        "webRequest"
    ],

    "background": {
        "scripts": ["background.js"]
    }
}
